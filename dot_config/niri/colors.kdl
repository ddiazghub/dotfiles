// Niri colors generated by Matugen

layout {
    focus-ring {
        active-color "#83d2e5"
        inactive-color "#3f484b"
    }

    border {
        active-color "#83d2e5"
        inactive-color "#899295"
        urgent-color "#ffb4ab"
    }
}

// Window rule colors for screencasted windows
window-rule {
    match is-window-cast-target=true

    focus-ring {
        active-color "#ffb4ab"
        inactive-color "#93000a"
    }

    border {
        inactive-color "#93000a"
    }

    shadow {
        color "#93000a70"
    }

    tab-indicator {
        active-color "#ffb4ab"
        inactive-color "#93000a"
    }
}
