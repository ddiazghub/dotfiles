// Niri colors generated by Matugen

layout {
    focus-ring {
        active-color "#9ecafc"
        inactive-color "#42474e"
    }

    border {
        active-color "#9ecafc"
        inactive-color "#8c9199"
        urgent-color "#ffb4ab"
    }
}

// Window rule colors for screencasted windows
window-rule {
    match is-window-cast-target=true

    focus-ring {
        active-color "#ffb4ab"
        inactive-color "#93000a"
    }

    border {
        inactive-color "#93000a"
    }

    shadow {
        color "#93000a70"
    }

    tab-indicator {
        active-color "#ffb4ab"
        inactive-color "#93000a"
    }
}
